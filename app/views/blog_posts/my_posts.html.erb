<!-- app/views/blog_posts/my_posts.html.erb -->
<h1>My Posts</h1>

<% if @blog_posts.any? %>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
        </tr>
      </thead>
      <tbody>
        <% @blog_posts.each do |blog_post| %>
        <tr>
          <td><%= blog_post.title %></td>
          <td><%= blog_post.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% else %>
  <p>Unfortunately You do not have any Blog Posts</p>
  <p>Would you like to create one ?</p>
  <%= link_to "New Post", new_blog_post_path %>
<% end %>