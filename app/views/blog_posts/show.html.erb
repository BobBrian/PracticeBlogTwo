<p style="color: green"><%= notice %></p>

<%= render @blog_post %>

<% if current_user && (current_user.role == 'Writer' && current_user == @blog_post.user) %>
  <div>
    <%= link_to "Edit", edit_blog_post_path(@blog_post) %> |
    <%= button_to "Delete", @blog_post, method: :delete %>
  </div>
<% end %>

<%= link_to "Back to blog posts", blog_posts_path %>

