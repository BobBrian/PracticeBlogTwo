<!-- app/views/user_list/index.html.erb -->
<h2>Writers</h2>
<% if @writers.any? %>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <!-- Table headers -->
        <thead>
        <tr>
          <th>User ID</th>
          <th>UserName</th>
          <th>Email</th>
          <th>Role</th>
          <th>Show Posts</th>
          <th>Delete</th>
          <!-- Add more table headers for other user attributes -->
        </tr>
      </thead>
      <tbody>
        <% @writers.each do |user| %>
          <tr>
            <!-- Table cells for customer attributes -->
            <tr>
            <td><%= user.id %></td>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td><%= link_to 'View Posts', all_posts_path(user_id: user.id), class: 'btn btn-primary' %></td> 
            <td><%= button_to 'Delete', user_registration_path(user), method: :delete, class: "btn btn-danger" %> </td>

            <!-- Add more table cells for other user attributes -->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p>No Writers Have Signed Up Yet.</p>
<% end %>

